<main class="mb-auto d-flex">
  <div class="container px-5 px-sm-0">
    <div class="row">

        <%= render 'users/info_form', {user: @user,book: @book_new} %>

        <div class="col-md-8 offset-md-1">

          <h2>Books</h2>

          <table class="table table-hover table-inverse">
              <thead>

              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>

            </thead>

            <tbody>
              <% @books.each do |books| %>
                <tr>
                  <td>
                    <%= link_to user_path(books.user.id) do %>
                      <%= image_tag books.user.get_profile_image(80,80) %>
                    <% end %>
                  </td>

                  <td>
                    <%= link_to book_path(books.id) do %>
                      <%= books.title %>
                    <% end %>
                  </td>

                  <td><%= books.opinion %></td>
                </tr>
              <% end %>
            </tbody>

          </table>

        </div>
      </div>
    </div>
  </main>