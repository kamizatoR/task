<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">

      <div class="container">

       <a  class="text-white navbar-brand" href="/">Bookers</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-farget="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>

            <li>
              <%= link_to "Home",user_path(current_user.id), class: 'nav-link text-white' %>
            </li>

            <li>
              <%= link_to "Users", users_path, class: 'nav-link text-white' %>
             </li>

            <li>
              <%= link_to "Books", books_path, class: 'nav-link text-white' %>
            </li>

            <li>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>
          <% else %>

            <li>
              <%= link_to "Home", root_path, class: 'nav-link nav-link text-white' %>
            </li>

            <li>
              <%= link_to "About", about_path, class: 'nav-link text-white' %>
            </li>


            <li>
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-white' %>
            </li>

            <li>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-white' %>
            </li>

          <% end %>
        </ul>
      </div>
      </div>

    </nav>

  </header>

     <p class="mb-3">
        <%= render 'layouts/flash' %>
     </p>
        <%= yield %>


    <footer class="mt-5">
      <div class="container">
        <div class="row justify-content-center">
         <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>

  </body>
</html>
