<div>

  <div>

    <h2>User info</h2>

    <table>

      <tbody>

        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>

      </tbody>

    </table>

  </div>

   <div>
    <%= link_to  edit_user_path(user.id) do %>
     <p><i class="fas fa-user"></i></p>
    <% end %>
  </div>

    <h2>New book</h2>
  <%= form_with model: book  do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :opinion %>
    <%= f.text_area :opinion %>

    <%= f.submit 'Create Book' %>
  <% end %>

